<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Doma.SearchPage" 
             Title="Поиск"
             IconImageSource="search.png">

    <StackLayout>
        <Frame BackgroundColor="Transparent" Padding="24" CornerRadius="0">
            <Label Text="Поиск" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"></Label>
        </Frame>

        <Button x:Name="btnRefresh" Text="Обновить" Clicked="btnRefresh_Clicked" />
    </StackLayout>

</ContentPage>
